<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="blogs content">
      <h2>All Blogs</h2>
      <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
          <a class="single" href = "/blogs/<%= blog._id %>">
            <h3 class="title"><%= blog.title %></h3>
            <p class="snippet"><%= blog.snippet %></p>
          </a>
        <% }) %>
      <% } else { %>
        <p>No blogs found.</p>
      <% } %>
    </div>

    <%- include('../partials/footer') %>
  </body>
</html>
